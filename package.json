{
  "name": "media-splitter",
  "version": "1.0.2",
  "description": "A cross-platform desktop application built with Electron and FFmpeg that allows you to split media files (video/audio) into smaller parts based on file size.",
  "main": "src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "dev:win": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "clean": "rimraf dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.mediasplitter.app",
    "productName": "Media Splitter",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!assets/src/**/*",
      "!**/*.md",
      "!**/.git/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "fileAssociations": [
      {
        "ext": "mp4",
        "name": "MP4 Video",
        "description": "MP4 Video File"
      },
      {
        "ext": "mp3",
        "name": "MP3 Audio",
        "description": "MP3 Audio File"
      },
      {
        "ext": "avi",
        "name": "AVI Video",
        "description": "AVI Video File"
      },
      {
        "ext": "mkv",
        "name": "MKV Video",
        "description": "Matroska Video File"
      }
    ],
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "kyuguest",
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.video",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "forceCodeSigning": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "AudioVideo",
      "icon": "assets/icon.png",
      "maintainer": "kyuguest <kyuguest@tuta.io>",
      "synopsis": "Media file splitting utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "uninstallDisplayName": "Uninstall Media Splitter",
      "shortcutName": "Media Splitter"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    }
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/9guest/MediaSplitter.git"
  },
  "keywords": [
    "electron",
    "ffmpeg",
    "media",
    "splitter",
    "video",
    "audio",
    "desktop",
    "application"
  ],
  "author": {
    "name": "kyuguest",
    "email": "kyuguest@tuta.io",
    "url": "https://github.com/9guest"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/9guest/MediaSplitter/issues"
  },
  "homepage": "https://github.com/9guest/MediaSplitter#readme"
}
